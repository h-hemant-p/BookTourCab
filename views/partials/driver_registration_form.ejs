<!-- <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#driverRegistrationForm"> open</button> -->
<div class="modal fade" id="driverRegistrationForm" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-xl " role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalTitleId">Driver Registration Form </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        
        <form action="/user/registerdriver" onsubmit="return submitFormData()" method="post" class="form">
        <div class="container ">
          <div class="border bg-primary">
            <h5 class="m-2 fw-bold text-center text-light">DRIVER REGISTRATION FORM</h5>
          </div>
        </div>
        <div class="container"><br>
          <div class="row">
            <div class="mb-3 col-lg-6 form-field">
              <label for="licence-issue-date" class="form-label fw-bold">Driving Licence Issue Date</label>
              <input type="date" class="form-control w-75 " name="licenceissuedate" id="licence-issue-date" onchange="checkLicenceIssueDate1()" aria-describedby="ride">
              <small></small>
            </div>
            <div class="mb-3 col-lg-6 form-field">
              <label for="licence-expiry-date" class=" form-label fw-bold">Driving Licence Expiry Date</label>
              <input type="date" class="form-control w-75" name="licenceexpirydate" id="licence-expiry-date" onchange="checkLicenceExpiryDate1()" aria-describedby="ride">
              <small></small>
            </div>
          </div><br>
          <div class="row">
            <div class="mb-3 col-lg-6 form-field">
              <label for="driving-licence-number" class=" form-label fw-bold ">Driving Licence Number</label>
              <input type="text" class="form-control w-75 " placeholder="Enter Driving Licence Number" name="licencenumber" id="driving-licence-number" onkeyup="checkLicenceNumber1()" aria-describedby="ride">
              <small></small>
            </div>
            <div class="mb-3 col-lg-6 form-field">
              <label for="driver-licence-image" class=" form-label fw-bold">Upload Driving Licence Image</label>
              <input type="file" class="form-control  w-75" placeholder="Upload Driving Licence here" name="licenceimage" id="driver-licence-image" aria-describedby="ride" onchange="checkLicenceImage1()" >
              <small></small>
            </div>
          </div><br>

          <div class="row">
            <div class="mb-3 col-lg-6 form-field">
              <label for="driver-experience-year " class=" form-label fw-bold ">Experience Year</label>
              <input type="text" class="form-control w-75" placeholder="Enter Experience Year" name="experienceyear" id="driver-experience-year" onkeyup="checkExperienceYear1()" aria-describedby="ride">
              <small></small>
            </div>
            <div class="mb-3 col-lg-6 form-field">
              <label for="driver-dob" class="form-label fw-bold ">Licence Class</label>
              <select class=" form-control w-75 " name="licenceclass" id="licence-class" onchange="ckeckLicenceClass1()">
                <option class="fw-bold" value="">select Licence class</option>
                <option class="fw-bold" value="MCWG">MCWG (Motorcycle without Gear)</option>
                <option class="fw-bold" value="MCWOG">MCWOG (Motorcycle with Gear)</option>
                <option class="fw-bold" value="HMV">HMV (Heavy Motor Vehicle)</option>
                <option class="fw-bold" value="HGMV">HGMV (Heavy Goods Motor Vehicle)</option>
                <option class="fw-bold" value="LMV-NT">LMV-NT (Light Motor Vehicle - Non-Transport)</option>
                <option class="fw-bold" value="LMV-T">LMV-T (Light Motor Vehicle - Transport)</option>
              </select>
              <small></small>
            </div>
          </div><br>

        </div><br>
        <div class="row">
          <div class="mb-3 col-lg-6 form-field">
            <input type="submit" class="btn btn-primary w-75 fw-bold" value="Submit">
          </div>
          <div class="mb-3 col-lg-6 form-field">
            <input type="button" class="btn btn-secondary w-75 fw-bold" value="cancel" data-bs-dismiss="modal">
          </div>
        </div><br>
      </form>
      </div>
    </div>
  </div>
</div>

<!-- Driver Registration form end -->
