<!-- Reserved Driver Registration form start -->


<!-- <button type="button" class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#reservedDriverRegistrationForm"> open</button> -->
<div class="modal fade" id="reservedDriverRegistrationForm" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-xl " role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalTitleId">Driver Registration Form </h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
  
        <div class="modal-body">
          <div class="container ">
            <div class="border bg-primary">
              <h5 class="m-2 fw-bold text-center text-light">DRIVER REGISTRATION FORM</h5>
            </div>
          </div>
      <form action="/user/adddriver" onsubmit="return submitFormData7()" method="post" class="form" enctype="multipart/form-data">
          <div class="container"><br>
  
            <div class="row">
              <div class="mb-3 col-lg-6 form-field">
                <label for="driver-name" class=" form-label fw-bold">Name</label>
                <input type="text" class="form-control w-75" placeholder="Enter Full Name" name="name" id="driver-name-7" onkeyup="checkUsername7()" autocomplete="off">
                <small></small>
              </div>
              <div class="mb-3 col-lg-6 form-field">
                <label for="driver-email" class=" form-label fw-bold">Enter Email</label>
                <input type="email" class="form-control w-75 " placeholder="Enter E-mail" name="email" id="driver-email-7" onkeyup="checkEmail7()" aria-describedby="ride" autocomplete="off">
                <small></small>
              </div>
            </div><br>
  
            <div class="row">
              <div class="mb-3 col-lg-6 form-field">
                  <label for="driver-contact" class=" form-label fw-bold">Contact No</label>
                  <input type="text" class="form-control w-75" placeholder="Enter Contact Number" name="contactno" id="driver-contact-7" onkeyup="checkContact7()" autocomplete="off">
                  <small></small>
              </div>
              <div class="mb-3 col-lg-6">
                <label for="gender" class=" form-label fw-bold ">Gender</label>
                <input type="radio" class="border-dark fw-bold mx-3" value="Male" checked name="gender" id="male" aria-describedby="ride"><label for="male" class="fw-bold">Male</label>
                <input type="radio" class="border-dark fw-bold mx-3" value="Female" name="gender" id="female" aria-describedby="ride"><label for="female" class="fw-bold">Female</label>
                <input type="radio" class="border-dark fw-bold mx-3" value="Other" name="gender" id="other" aria-describedby="ride"><label for="other" class="fw-bold">Other</label>
              </div>
              
            </div><br>
  
            <div class="row">
              <div class="mb-3 col-lg-6 form-field">
                <label for="licence-issue-date" class="form-label fw-bold">Driving Licence Issue Date</label>
                <input type="date" class="form-control w-75 " name="issuedate" id="licence-issue-date-7" onchange="checkLicenceIssueDate7()" aria-describedby="ride">
                <small></small>
              </div>
              <div class="mb-3 col-lg-6 form-field">
                <label for="licence-expiry-date" class=" form-label fw-bold">Driving Licence Expiry Date</label>
                <input type="date" class="form-control w-75" name="expirydate" id="licence-expiry-date-7" onchange="checkLicenceExpiryDate7()" aria-describedby="ride">
                <small></small>
              </div>
            </div><br>
  
            <div class="row">
              <div class="mb-3 col-lg-6 form-field">
                <label for="driving-licence-number" class=" form-label fw-bold ">Driving Licence Number</label>
                <input type="text" class="form-control w-75 " placeholder="Enter Driving Licence Number" name="licencenumber" id="driving-licence-number-7" onkeyup="checkLicenceNUmber7()" aria-describedby="ride">
                <small></small>
              </div>
              <div class="mb-3 col-lg-6 form-field">
                <label for="driver-licence-image" class=" form-label fw-bold">Upload Driving Licence Image</label>
                <input type="file" class="form-control w-75" placeholder="Upload Driving Licence here" name="licenceimage" accept="image/*" id="driver-licence-image-7" aria-describedby="ride" onchange="checkLicenceImage7()" >
                <small></small>
              </div>
            </div><br>
  
            <div class="row">
              <div class="mb-3 col-lg-6 form-field">
                <label for="driver-experience-year " class=" form-label fw-bold ">Experience Year</label>
                <input type="text" class="form-control w-75" placeholder="Enter Experience Year" name="experienceyear" id="driver-experience-year-7" onkeyup="checkExperienceYear7()" aria-describedby="ride">
                <small></small>
              </div>
              
              <div class="mb-3 col-lg-6 form-field">
                <label for="driver-dob" class="form-label fw-bold ">Licence Class</label>
                <select class=" form-control w-75 " name="licenceclass" id="licence-class-7" onchange="ckeckLicenceClass7()">
                  <option class="fw-bold" value="">select Licence class</option>
                  <option class="fw-bold" value="MCWG">MCWG (Motorcycle without Gear)</option>
                  <option class="fw-bold" value="MCWOG">MCWOG (Motorcycle with Gear)</option>
                  <option class="fw-bold" value="HMV">HMV (Heavy Motor Vehicle)</option>
                  <option class="fw-bold" value="HGMV">HGMV (Heavy Goods Motor Vehicle)</option>
                  <option class="fw-bold" value="LMV-NT">LMV-NT (Light Motor Vehicle - Non-Transport)</option>
                  <option class="fw-bold" value="LMV-T">LMV-T (Light Motor Vehicle - Transport)</option>
                </select>
                <small></small>
              </div>
            </div><br>
          </div><br>
          <div class="row">
            <div class="mb-3 col-lg-6 form-field">
              <input type="button" class="btn btn-secondary ms-2 w-75" value="cancel" data-bs-dismiss="modal">
            </div>
            <div class="mb-3 col-lg-6 form-field">
              <input type="submit" class="btn btn-primary w-75" value="Submit">
            </div>
          </div><br>
        </form>
        </div>
      </div>
    </div>
  </div>
  
  
  <!-- Reserved Driver Registration form end -->
  
  <script src="/js/reserved_driver_registration_form.js"></script>