<!-- adding css file -->
<link rel="stylesheet" href="/css/navbar.css">

<!-- adding normal_user_profile partial -->

<!-- adding contact_us_form partial -->
<%- include('../partials/contact_us_form')%>


 <!-- top header -->
 <div class="container">
    <div class="row">
        <div class="offset-lg-2 col-lg-6 col-md-8 col-sm-12 col-xs-12">
            <div class="d-flex">
                <h5  style="font-family: 'Faster One', cursive; " class="fs-1 mt-2 "> BOOK TOUR CAB</h5>
                <img class="mt-2" src="images/BTC_logo.png" alt="image" height="12%" width="12%">
                
            </div>            
        </div>
        <div class=" col-lg-4 col-md-4 col-sm-4 col-xs-4 d-none d-md-block text-end">
             <% if(!user){%>
                <button class="btn btn-primary mt-3" style="position: relative;" id="signInButton"><a href="/sign" style="text-decoration: none; color:white; font-weight: bold;">Sign In</a></button> 
                <!-- <button class="btn mt-3 ms-4" style="position: relative;" id="signUpButton" type="button" data-bs-toggle="modal" data-bs-target="#signupmodal">SignUp</button> -->
             <%}else{%>
                <button class="btn mt-3" style="position: relative;" id="logout-btn"><a class="text-light fw-bold text-decoration-none"  href="/user/logoutuser">Logout</a></button>                 
            <%}%>   
        </div>
    </div>
</div>

<!-- navbar -->
<nav class="navbar navbar-expand-lg navbar-light " id="driver-info">
    <div class="container">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active mx-4 fw-bold text-light" aria-current="page" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active mx-4 fw-bold text-light" aria-current="page" href="services">Services</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active mx-4 fw-bold text-light" aria-current="page" href="safety">Safety</a>
                </li>
                <li class="nav-item">
                   <a class="nav-link active mx-4 fw-bold text-light" aria-current="page" href="about">AboutUs</a>
                </li>
                <li class="nav-item">
                   <a class="nav-link active mx-4 fw-bold text-light" aria-current="page" href="contact_us_form" data-bs-toggle="modal" data-bs-target="#contactModal">Contact Us</a>
                </li>
            </ul>
            <%if(user){%>
            <form class="d-flex  " id="normal-user-profile-reference">
                <img src="images/profilePic.jpeg"  height="40px" width="40px" alt="" style="border-radius: 50%;">
                <span class="text-light  fw-bold fs-6 mx-3"> 
                <% console.log(user) %>
                <% if(user.name != "" && user.name != undefined){%>
                    <span><%= user.name %></span>
                <%}else{%>
                    <span><%= user.email %></span>
                <% } %><br>
                <% if(user.city || user.state){%>
                    <i class="fa-solid fa-location-dot"></i>
                   <span class="fs-6">
                        <small>
                            <% if(user.city){%>
                            <span><%= user.city %></span>,
                            <%};if(user.state){%>
                            <span> <%= user.state %></span>
                            <% } %>
                        </small>
                    </span>
                    <%}%>
                </span>
            </form>
            <%}%>
            <div class="d-md-none">

                <% if(!user){%>
                   <button class="btn btn-primary w-75 ms-4 mt-3" id="signInButton" data-bs-toggle="modal" data-bs-target="#signinmodal" >SignIn</button> 
                   <!-- <button class="btn w-75 ms-4 mt-3" id="signUpButton" data-bs-toggle="modal" data-bs-target="#signupmodal">SignUp</button> -->
                <%}else{%>
                   <button class="btn w-75 ms-4 mt-3" id="logout-btn"><a class="text-light fw-bold text-decoration-none"  href="/index/logoutuser">Logout</a></button> 
                <%}%>
            </div>
        </div>
    </div>
</nav>
<script src="/js/navbar.js"></script>